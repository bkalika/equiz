<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.request.charset</param-name>
		<param-value>UTF-8</param-value>
	</context-param>

	<resource-env-ref>
		<resource-env-ref-name>jdbc/testingsysdb</resource-env-ref-name>
		<resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
	</resource-env-ref>

	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>com.equiz.controllers.Controller</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>com.equiz.listeners.ContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.equiz.web.filters.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>com.equiz.web.filters.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>goToLoginCommand loginCommand logoutCommand goToUserRegisterCommand registerCommand languageCommand</param-value>
		</init-param>
		<init-param>
			<param-name>admin</param-name>
			<param-value>adminCommand createSubjectCommand updateSubjectCommand deleteSubjectCommand updateUserCommand createTestCommand updateTestCommand deleteTestCommand goToUpdateTestCommand createQuestionCommand updateQuestionCommand deleteQuestionCommand goToUpdateAnswerCommand createAnswerCommand updateAnswerCommand deleteAnswerCommand addUsersToTheTestCommand</param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>noCommand goToUserCommand subjectCommand testCommand goToSolveTestCommand solveCommand</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/WEB-INF/jsp/*</url-pattern>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>/WEB-INF/jsp/login.jsp</welcome-file>
	</welcome-file-list>

</web-app>